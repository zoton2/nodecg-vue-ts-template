{
  "name": "nodecg-vue-ts-template",
  "version": "1.0.0",
  "description": "Template for NodeCG bundles that use Vue.js and TypeScript.",
  "homepage": "https://github.com/zoton2/nodecg-vue-ts-template#readme",
  "bugs": {
    "url": "https://github.com/zoton2/nodecg-vue-ts-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoton2/nodecg-vue-ts-template.git"
  },
  "license": "MIT",
  "author": "zoton2",
  "scripts": {
    "autofix": "npx run-s autofix:*",
    "autofix:browser": "npx eslint --fix --ext .ts,.vue src/dashboard && npx eslint --fix --ext .ts,.vue src/graphics && npx eslint --fix --ext .ts src/browser_shared",
    "autofix:extension": "npx eslint --fix --ext .ts src/extension",
    "build": "npx run-s build:*",
    "build:browser": "npx cross-env NODE_ENV=production npx webpack",
    "build:extension": "npx tsc -b tsconfig.extension.json",
    "clean": "npx trash node_modules/.cache && npx trash dashboard && npx trash graphics && npx trash extension",
    "start": "node ../..",
    "typeschemas": "node script/typeschemas.js",
    "watch": "npx run-p watch:*",
    "watch:browser": "npx webpack -w",
    "watch:extension": "npx tsc -b tsconfig.extension.json -w"
  },
  "devDependencies": {
    "@mdi/font": "^4.5.95",
    "@types/clone": "^0.1.30",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "@vue/component-compiler-utils": "^3.0.2",
    "clone": "^2.1.2",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "deepmerge": "^4.2.2",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-vue": "^6.0.1",
    "fibers": "^4.0.2",
    "file-loader": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^3.1.0",
    "globby": "^10.0.1",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-webpack-plugin": "^4.0.0-beta.8",
    "json-schema-to-typescript": "^7.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.23.6",
    "sass-loader": "^8.0.0",
    "trash-cli": "^3.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "vue": "^2.6.10",
    "vue-class-component": "^7.1.0",
    "vue-hot-reload-api": "^2.3.4",
    "vue-loader": "^15.7.2",
    "vue-property-decorator": "^8.3.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10",
    "vuetify": "^2.1.10",
    "vuetify-loader": "^1.3.1",
    "vuex": "^3.1.2",
    "vuex-class": "^0.3.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-livereload-plugin": "^2.2.0"
  },
  "alias": {
    "vue": "./node_modules/vue/dist/vue.esm.js"
  },
  "nodecg": {
    "compatibleRange": "^1.5.0",
    "dashboardPanels": [
      {
        "name": "example",
        "title": "Example",
        "file": "example.html"
      }
    ],
    "graphics": [
      {
        "file": "example.html",
        "width": 1920,
        "height": 1080
      }
    ]
  },
  "vue": {
    "runtimeCompiler": true
  }
}
